{
  "seed": 42,
  "epochs": 10,
  "model_name": "roberta-base",
  "train_batch_size": 32,
  "valid_batch_size": 64,
  "max_length": 128,
  "margin": 0.5,
  "use_gpu": true,
  "run_mode": "recurrent",
  "architecture": "LSTM",
  "wandb": true,
  "preprocessing": ["LOWER", "NUMBERS"],
  "vocab_file": "res/vocab/naive.txt",
  "embedding_dimension": 300,
  "embedding_type": "glove",
  "dropout": 0.2,
  "output_features": 128,
  "training_set": {
    "path": "res/data/train.csv",
    "cols": ["comment_text"],
    "type": "weighted"
  },
  "test_set": {
    "path": "res/data/validation_data.csv",
    "cols": ["more_toxic", "less_toxic"],
    "type": "pairwise"
  },
  "optimizations": {
    "learning_rate": 1e-4,
    "L2_regularization": 0.01
  }
}
