{
  "options": {
    "run_mode": "recurrent",
    "use_gpu": true,
    "wandb": true,
    "seed": 42
  },
  "transformer": {
    "model_name": "roberta-base",
    "output_features": 768,
    "max_length": 128
  },
  "recurrent": {
    "architecture": "BiDi",
    "preprocessing": ["LOWER", "PUNCTUATION", "WHITESPACES"],
    "vocab_file": "res/vocab/vocab.txt",
    "embedding_dimension": 300,
    "embedding_type": "glove",
    "hidden_dim": 128,
    "max_length": 128,
    "preprocessing_metric": true
  },
  "training": {
    "epochs": 5,
    "train_batch_size": 8,
    "valid_batch_size": 8,
    "optimizer": "adam",
    "learning_rate": 6e-6,
    "L2_regularization": 1e-6,
    "dropout": 0.3,
    "gradient_clipping": 1,
    "weighted_sampling": true,
    "dataset": "combination_exp"
  },
  "debug": { "max_length": 128 },
  "evaluation": {
    "dataset": "jigsaw2022"
  }
}
